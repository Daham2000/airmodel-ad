                                            <input type="text" style="display: none" class="form-control" name="imageSelected" value="@ViewBag.product.productId" aria-describedby="emailHelp" placeholder="Enter computer name">

                                            <a style="height:115px" class="product-gallery-item active" src="@ViewBag.product.productImage" data-zoom-image="@ViewBag.product.productImage">
                                                <img src="@ViewBag.product.productImage" alt="product side">
                                            </a>
                                        </button>
                                    </form>

                                    @{
                                        if (@ViewBag.product.hasVarients == true)
                                        {
                                            if (ViewBag.product.varientModels != null)
                                            {
                                                @foreach (var varient in @ViewBag.product.varientModels)
                                                {
                                                    @foreach (var option in @ViewBag.product.varientOptionModels)
                                                    {
                                                        if (option.varientId == @varient.varientId)
                                                        {
                                                            if (option.varientOptionId != new Guid("00000000-0000-0000-0000-000000000000"))
                                                            {
                                                                <form action="">
                                                                    <button type="submit" style="all: unset;">
                                                                        <input type="text" style="display: none" class="form-control" name="imageSelected" value="@option.varientOptionId" aria-describedby="emailHelp" placeholder="Enter computer name">

