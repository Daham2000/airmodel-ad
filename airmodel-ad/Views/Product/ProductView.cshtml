    <script>
        // Function to update data without refreshing the tab
        function GetOnSaleItemsData() {
            jQuery.ajax({
                url: '@Url.Action("GetOnSaleItems", "Home")',
                type: 'GET',
                success: function (data) {
                    $('#products-sale-tab-sub').html(data);
                    $('#products-top-tab-sub').html(data);
                },
                error: function () {
                    // Handle errors if necessary
                }
            });
            console.log("Ajax");
        }

        $(".nav-link").click(function (e) {
            e.preventDefault();
            console.log($(this).attr('id'))
            jQuery.ajax({
                url: '@Url.Action("GetProductByCategory", "Home")',
                type: 'GET',
                data: { categoryId: $(this).attr('id') },
                success: function (data) {
                    $('#tab-categories').html(data);
                },
                error: function () {
                    // Handle errors if necessary
                }
            });
        });

        $("#searchId").click(function (e) {
            e.preventDefault();
            console.log($("#searchInputField").val())
            jQuery.ajax({
                url: '@Url.Action("SearchProduct", "Home")',
                type: 'GET',
                data: { searchInput: $("#searchInputField").val() },
